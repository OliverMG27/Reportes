<style>



        /* Estilos botones */
        .btn {
            color: white;
            background-color: #92002d;
            text-align: center;
            padding: 10px 20px;
            line-height: 12px;
        }


        .btnOp {
            color: white;
            background-color: #00288D;
            text-align: center;
            padding: 10px 20px;
            line-height: 12px;
            border-radius: 10px;
        }


        /* Estilos para el texto de las cards */
        a {
            color: black; 
            text-decoration: none; 
        }


        /* Estilos card */
        .card {
            border: 2px solid #92002d;
            border-radius: 10px; 
            transition: box-shadow 0.3s; 
        }


         .card:hover {
            box-shadow: 0 0 20px #92002d; 
         }


        /* Medidas card */
        .card {
            height: 100%;
            width: auto;
        }


        /* Ajusta imagen a la card */
        .card .img {
            max-height: 100%;
            width: auto;
        }




</style>