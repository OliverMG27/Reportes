@page
@model Reportes.Pages.Menu.MenuIModel
@{
    ViewData["Title"] = "Menú";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]Sistema de reportes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-10"></div>
            <div class="col-12 col-md-2 col-lg-2">
                <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Opciones
                    </button>

                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Index">Cerrar sesion</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </br>
    </br>
    </br>

    <!-- Col 1-->
    <div class="col-12 text-center">
        <h2><strong>Menú de reportes</strong></h2>
        <h2><strong></strong></h2>
    </div>


    @* Col 2 *@
    <div class="container text-center">
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-3">
                <!-- Card 1 -->
                <div class="card d-flex flex-column mt-3 mb-3">
                    <a asp-page="/RMortalidades/RMortalidadesI">
                        <img src="https://img.freepik.com/vector-premium/logotipo-animales-granja-lechones-cerdo_119039-242.jpg?w=2000"
                             class="card-img-top" alt="10px">
                        <div class="card-body flex-fill">
                            <h5 class="card-title"><strong>Reporte de mortalidades</strong></h5>
                            <br />
                            <a asp-page="/RMortalidades/RMortalidadesI" class="btn btn-primary">Ingresar</a>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <!-- Card 2 -->
                <div class="card d-flex flex-column mt-3 mb-3">
                    <a asp-page="/RPesadas/RPesadasI">
                        <img src="https://img.freepik.com/vector-premium/logotipo-animales-granja-lechones-cerdo_119039-242.jpg?w=2000"
                             class="card-img-top" alt="10px">
                        <div class="card-body flex-fill">
                            <h5 class="card-title"><strong>Reporte de pesadas</strong></h5>
                            <br />
                            <br />
                            <a asp-page="/RPesadas/RPesadasI" class="btn btn-primary">Ingresar</a>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <!-- Card 3 -->
                <div class="card d-flex flex-column mt-3 mb-3">
                    <a asp-page="/RConsumo/RConsumosI">
                        <img src="https://img.freepik.com/vector-premium/logotipo-animales-granja-lechones-cerdo_119039-242.jpg?w=2000"
                             class="card-img-top" alt="10px">
                        <div class="card-body flex-fill">
                            <h5 class="card-title"><strong>Reporte de consumo de alimento, medicina y diversos</strong></h5>
                            <a asp-page="/RConsumo/RConsumosI" class="btn btn-primary">Ingresar</a>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <!-- Card 4 -->
                <div class="card d-flex flex-column mt-3 mb-3">
                    <a asp-page="/RCGranjas/RCGranjasI">
                        <img src="https://img.freepik.com/vector-premium/logotipo-animales-granja-lechones-cerdo_119039-242.jpg?w=2000"
                             class="card-img-top" alt="10px">
                        <div class="card-body flex-fill">
                            <h5 class="card-title"><strong>Reporte de análisis cierre de granjas</strong></h5>
                            <br />
                            <a asp-page="/RCGranjas/RCGranjasI" class="btn btn-primary">Ingresar</a>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>


</body>
</html>






<style>



        /* Estilos botones */
        .btn {
            color: white;
            background-color: #92002d;
            text-align: center;
            padding: 10px 20px;
            line-height: 12px;
        }


        /* Estilos para el texto de las cards */
        a {
            color: black; 
            text-decoration: none; 
        }


        /* Estilos card */
        .card {
        border: 2px solid #92002d;
            border-radius: 10px; 
            transition: box-shadow 0.3s; 
        }


                .card:hover {
                    box-shadow: 0 0 20px #92002d; 
                }


        /* Medidas card */
        .card {
            height: 100%;
            width: auto;
        }


        /* Ajusta imagen a la card */
        .card .img {
            max-height: 100%;
            width: auto;
        }




</style>