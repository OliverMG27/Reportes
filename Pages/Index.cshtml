@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}
<div class="card mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <h2 class="text-center mb-5">Inicio Sesion</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script>
            document.addEventListener("keydown", function (event) {
                if (event.keyCode === 8 || event.keyCode === 37) {
                    event.preventDefault();
                }
            });
        </script>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input class="form-control" asp-for="Usuario">
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Clave</label>
                <input class="form-control" type="password" asp-for="Clave">
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col d-grid">
                    <button type="submit" class="btn btn-primary w-100" href="/">Inicio Sesion</button>
                </div>
            </div>
        </form>

    </div>
</div>
<style>
    .card{
        background-color: #F8F9F9;
        border-radius: 20px;
        margin-top:60px;

    }
    .btn {
        color: white;
        background-color: #92002d;
        text-align: center;
        padding: 10px 20px;
        line-height: 12px;
        margin-top: 10px;
        border-radius: 10px;
    }


</style>
