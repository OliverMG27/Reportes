@page
@model Reportes.Pages.Pruebas.PruebasIModel
@{
    ViewData["Title"] = "ReporteExcel";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<div class="row mt-4">
    <div class="col-12">

        <div class="card shadow-sm">
            <div class="card-header">
                <h5>Ejemplo descarga excel</h5>
            </div>
            <div class="card-body">

                <form action="@Url.Action("exportar","Home")" method="post">
                    <div class="form-row align-items-end">
                        <div class="col-sm-3">
                            <label class="form-text">Empleado</label>
                            <select class="form-control" name="empleado"></select>
                        </div>
                        <div class="col-sm-3">
                            <label class="form-text">Fecha Inicio</label>
                            <input type="text" class="form-control" name="fechainicio" autocomplete="off" />
                        </div>
                        <div class="col-sm-3">
                            <label class="form-text">Fecha Fin</label>
                            <input type="text" class="form-control" name="fechafin" autocomplete="off" />
                        </div>
                        <div class="col-sm-3">
                            <button class="btn btn-success btn-block" type="submit">Descargar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $("input[name=fechainicio]").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true
            }).datepicker('setDate', new Date());

            $("input[name=fechafin]").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true
            }).datepicker('setDate', new Date());


            $("select[name=empleado]").append(
                $("<option>").attr({ "value": "0" }).text("Todos")
            )

            $.get("@Url.Action("obtenerEmpleado", "Home")", function (data) {

                $.each(data, function (i, fila) {
                    $("select[name=empleado]").append(
                        $("<option>").attr({ "value": fila._IdEmpleado }).text(fila._Nombres)
                    )
                })
            });

        })
    </script>

}

<style>


    /* Estilos boton */
    .btn {
        color: white;
        background-color: #92002d;
        text-align: center;
        padding: 10px 20px;
        line-height: 12px;
    }

</style>
