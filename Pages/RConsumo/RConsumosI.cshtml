@page
@model Reportes.Pages.RConsumo.RConsumosIModel
@{
    ViewData["Title"] = "Consumo";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
</head>
<body>


    <div class="container mt-4">
        <div class="row d-flex flex-column align-items-stretch">


            <!-- Col 1-->
            <div class="col-12 text-center">
                <h2><strong>Reporte de consumo de Alimento, Medicina y Diversos</strong></h2>
            </div>

            <div class="col-md-12 col-sm-12 mt-2">
                <br />
            </div>


            <!-- Col2  -->
            <div class="col-md-4 col-sm-12 mt-2">
                <label for="selectBox text"><strong>Empresa:</strong></label>
            </div>
            <div class="col-md-8 col-sm-12 mt-2">
                <select class="form-select" aria-label="Default select example">
                    <option selected>- - Selección - -</option>
                    <option value="Op1-Empresa">Op 1</option>
                    <option value="Op2-Empresa">Op 2</option>
                    <!-- Add more options here -->
                </select>
            </div>


            <!-- Col 3 -->
            <div class="col-md-4 col-sm-12 mt-2">
                <label for="selectBox text"><strong>Granja:</strong></label>
            </div>

            @* Col 3 *@
            <div class="col-md-8 col-sm-12 mt-2">
                <select class="form-select" aria-label="Default select example">
                    <option selected>- - Selección - -</option>
                    <option value="Op1-Granja">Op 1</option>
                    <option value="Op2-Granja">Op 2</option>
                    <!-- Add more options here -->
                </select>
            </div>


            <!-- Col 4 -->
            <div class="col-md-4 col-sm-12 mt-2">
                <label for="selectBox text"><strong>Fechas de entrada:</strong></label>
            </div>

            @* Col 4 *@
            <div class="col-md-8 col-sm-12 mt-2">
                <input type="date" class="custom-date-input" />
            </div>


            <!-- Col 5 -->
            <div class="col-md-4 col-sm-12 mt-2">
                <label for="selectBox text"><strong>Fechas de salida:</strong></label>
            </div>

            @* Col 5 *@
            <div class="col-md-8 col-sm-12 mt-2">
                <input type="date" class="custom-date-input" />
            </div>


            <!-- Col 6 -->
            <div class="col-12 mt-2">
            </div>


            <!-- Col 7 -->
            <div class="col-md-12 col-sm-12 mt-2">
                <br />
            </div>

            <!-- Col 8 -->
            <div class="col-12 col-md-12 col-sm-12 mt-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        <strong>Presentar productos con stock CERO</strong>
                    </label>
                </div>
            </div>


            @* Col 9 *@
            <div class="col-12 col-md-12 col-sm-12 mt-2">
                <button type="button" class="btn btn-primary">Kardex de Alimento (Entradas/Salidas)</button>
            </div>


            <!-- Col 10 -->
            <div class="col-md-12 col-sm-12 mt-2">
                <br />
            </div>


            <!-- Col 11 -->
            <div class="col-12 mt-2">
                <label for="selectBox text">
                    <strong>
                        Nota: En este reporte No aplica el excluir los productos con stock CERO, es decir, se muestran Todos sin excepción
                    </strong>
                </label>
            </div>


            <!-- Col 12 -->
            <div class="col-12 mt-2">
                <button type="button" class="btn btn-primary">Solo consumo de Alimento (Salidas)</button>
            </div>


            <!-- Col 13 -->
            <div class="col-12 mt-2">
            </div>


        </div>
    </div>

</body>
</html>




<style>

    /* Estilos boton */
    .btn {
        color: white;
        background-color: #92002d;
        text-align: center;
        padding: 10px 20px;
        line-height: 12px;
    }

</style>